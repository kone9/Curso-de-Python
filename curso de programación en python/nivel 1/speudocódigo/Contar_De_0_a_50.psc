Algoritmo mi_primer_arreglo_de_conteo_MIENTRAS
	
	Definir contar como Entero
	
		Leer contar;
		
		mientras contar < 50 Hacer
			
			escribir "conteo= ",contar;
			contar<- contar +1 ;
			
		FinMientras
		
		mientras contar > 0 Hacer
			escribir "conteo= ",contar;
			contar<- contar -1 ;
		
		FinMientras
		
		escribir "¡Muy bien resolviste el ejercicio! ";
		
	
FinAlgoritmo
